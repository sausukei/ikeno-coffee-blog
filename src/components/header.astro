---
import Logo from '../assets/ikeno-coffee.svg';
---

<header>
  <div class="top-row">
    <a href="/" class="logo">
      <img src={Logo.src} height="32"  alt="">
    </a>
  </div>
  <div class="bottom-row">
    <nav>
      <ul>
        <!-- <li><a href="/menu">Menu</a></li> -->
        <li><a href="/about">About</a></li>
        <li><a href="/blog">Blog</a></li>
        <!-- <li><a href="/contact">Contact</a></li> -->
      </ul>
    </nav>
  </div>
</header>

<style lang="scss">
  header {
    border-bottom: 1px solid #000;
    width: calc(100% - 4rem);
    margin: 0 2rem;
    height: 12rem;
    display: flex;
    flex-direction: column;
    position: sticky;
  }
  .top-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border-bottom: 1px solid #000;
    flex: 4; /* 高さの比率を4に設定 */
  }
  .logo {
    cursor: pointer;
  }
  .bottom-row {
    padding: 0.5rem 1rem;
    display: flex;
    align-items: center;
    flex: 1; /* 高さの比率を1に設定 */
  }
  nav ul {
    display: flex;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  nav a {
    text-decoration: none;
    color: #000;
    font-weight: bold;
  }
  nav li {
    color: #000;
  }
  nav li:hover {
    background-color: #fff;
  }
</style>
